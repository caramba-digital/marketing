<odoo>

  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.website_facebook_pixel</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="20"/>
    <field name="inherit_id" ref="website.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@id='google_maps_setting']" position="after">
        <div class="col-12 col-lg-6 o_setting_box" id="facebook_pixel" title="">
          <div class="o_setting_left_pane">
            <field name="has_facebook_pixel"/>
          </div>
          <div class="o_setting_right_pane">
            <label for="has_facebook_pixel"/>
            <span class="fa fa-lg fa-globe" title="Values set here are website-specific." groups="website.group_multi_website"/>
            <div class="text-muted">
              Track visits in website with Facebook Pixel.
            </div>
            <div class="content-group" attrs="{'invisible': [('has_facebook_pixel', '=', False)]}">
              <div class="row mt16">
                 <label class="col-lg-3 o_light_label" string="Pixel ID" for="facebook_pixel"/>
                 <field name="facebook_pixel" placeholder="XXXXXXXXXXXXXXX"
                                                attrs="{'required': [('has_facebook_pixel', '=', True)]}"/>
              </div>
            </div>
            <div attrs="{'invisible': [('has_facebook_pixel', '=', False)]}">
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>


</odoo>