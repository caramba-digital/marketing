<odoo>

  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.website_facebook_pixel</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="20"/>
    <field name="inherit_id" ref="website.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@id='google_maps_setting']" position="after">
        <div class="col-12 col-lg-6 o_setting_box" id="facebook_pixel" title="">
          <div class="o_setting_left_pane">
            <field name="has_facebook_pixel"/>
          </div>
          <div class="o_setting_right_pane">
            <label for="has_facebook_pixel"/>
            <span class="fa fa-lg fa-globe" title="Values set here are website-specific." groups="website.group_multi_website"/>
            <div class="text-muted">
              Track visits in website with Facebook Pixel.
            </div>
            <div class="content-group" attrs="{'invisible': [('has_facebook_pixel', '=', False)]}">
              <div class="row mt16">
                 <label class="col-lg-3 o_light_label" string="Pixel ID" for="facebook_pixel"/>
                 <field name="facebook_pixel" placeholder="XXXXXXXXXXXXXXX"
                                                attrs="{'required': [('has_facebook_pixel', '=', True)]}"/>                
                 <label class="col-lg-3 o_light_label" string="Purchase" for="fb_track_purchase"/>
                 <field name="fb_track_purchase" attrs="{'required': [('has_facebook_pixel', '=', True)]}"/>              
                 <label class="col-lg-3 o_light_label" string="Lead" for="fb_track_lead"/>
                 <field name="fb_track_lead" attrs="{'required': [('has_facebook_pixel', '=', True)]}"/>              
                 <label class="col-lg-3 o_light_label" string="Complete Registration" for="fb_track_registration"/>
                 <field name="fb_track_registration" attrs="{'required': [('has_facebook_pixel', '=', True)]}"/>                   
                 <label class="col-lg-3 o_light_label" string="Add Payment Info" for="fb_track_payment_info"/>
                 <field name="fb_track_payment_info" attrs="{'required': [('has_facebook_pixel', '=', True)]}"/>              
                 <label class="col-lg-3 o_light_label" string="Add to Chart" for="fb_track_add_to_chart"/>
                 <field name="fb_track_add_to_chart" attrs="{'required': [('has_facebook_pixel', '=', True)]}"/>              
                 <label class="col-lg-3 o_light_label" string="Add to Wishlist" for="fb_track_add_to_wishlist"/>
                 <field name="fb_track_add_to_wishlist" attrs="{'required': [('has_facebook_pixel', '=', True)]}"/>              
                 <label class="col-lg-3 o_light_label" string="Initiate Checkout" for="fb_track_initiate_checkout"/>
                 <field name="fb_track_initiate_checkout" attrs="{'required': [('has_facebook_pixel', '=', True)]}"/>              
                 <label class="col-lg-3 o_light_label" string="Search" for="fb_track_search"/>
                 <field name="fb_track_search" attrs="{'required': [('has_facebook_pixel', '=', True)]}"/>              
                 <label class="col-lg-3 o_light_label" string="View Content" for="fb_track_view_content"/>
                 <field name="fb_track_view_content" attrs="{'required': [('has_facebook_pixel', '=', True)]}"/>              
                 <label class="col-lg-3 o_light_label" string="Contact" for="fb_track_contact"/>
                 <field name="fb_track_contact" attrs="{'required': [('has_facebook_pixel', '=', True)]}"/>              
                 <label class="col-lg-3 o_light_label" string="Customize Product" for="fb_track_customize_product"/>
                 <field name="fb_track_customize_product" attrs="{'required': [('has_facebook_pixel', '=', True)]}"/>              
                 <label class="col-lg-3 o_light_label" string="Donate" for="fb_track_donate"/>
                 <field name="fb_track_donate" attrs="{'required': [('has_facebook_pixel', '=', True)]}"/>             
                 <label class="col-lg-3 o_light_label" string="Find Location" for="fb_track_find_location"/>
                 <field name="fb_track_find_location" attrs="{'required': [('has_facebook_pixel', '=', True)]}"/>               

              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>


</odoo>