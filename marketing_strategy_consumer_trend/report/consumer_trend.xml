<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="marketing_print_consumer_trend_canvas" model="ir.actions.report">
        <field name="name">Print Canvas</field>
        <field name="model">marketing_strategy.consumer_trend</field>
        <field name="report_type">qweb-pdf</field>
        <field name="paperformat_id" ref="paperformat_euro_no_margin"/>
        <field name="report_name">marketing_strategy_consumer_trend.print_consumer_trend_canvas</field>
        <field name="report_file">marketing_strategy_consumer_trend.print_consumer_trend_canvas</field>
        <field name="print_report_name">'Consumer Trend - %s' % (object.name).replace('/', '')</field>
        <field name="binding_model_id" ref="model_marketing_strategy_consumer_trend"/>
        <field name="binding_type">report</field>
    </record>

    <template id="print_consumer_trend_canvas">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>