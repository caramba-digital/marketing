<odoo>
  <data>
       
    <menuitem name="Sales Funnels"
            id="marketing_funnels_menu_root"
            sequence="10"
            groups="base.group_user"
            web_icon="marketing_funnels,static/description/icon.png"/>

      <!-- Funnels --> 
      <record id='funnel_view_tree' model='ir.ui.view'>
        <field name="name">funnel.tree</field>
        <field name="model">funnel.funnel</field>
        <field name="arch" type="xml">
            <tree string="Funnels">
                <field name="name" />
                <field name="type_id" />
                <field name="buyer_journey_stage" />
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id='funel_view_form' model='ir.ui.view'>
        <field name="name">funnel.form</field>
        <field name="model">funnel.funnel</field>
        <field name="arch" type="xml">
            <form string="Funnel">
                <header>
                    <field name="buyer_journey_stage" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
            	<sheet>
                    <div class="oe_title">
                    	<h1><field name="name" placeholder="Name" nolabel="1"/></h1>                    	
                    </div>
                    <group>
                        <group>
                            <field name="type_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="website_id"/>
                            <field name="child_funnel_id"/>
                            <field name="parent_funnel_id"/>
                            <field name="social_proof_interval"/>
                        </group>
                    </group>
                    <group string="Pages">
                        <field name="pages_ids"  widget="section_and_note_one2many"  mode="tree,form"  context="{'default_funnel_id': active_id}" nolabel="1" >
                            <form >
                                <div class="oe_title">
                                    <h1><field name="name" placeholder="Name" nolabel="1"/></h1>                    	
                                </div>
                                <group>
                                    <group>
                                        <field name="type_id"/>  
                                        <field name="visits"/>       
                                        <field name="website_id"/>                                  
                                    </group>
                                    <group>
                                    </group>
                                </group>
                                <notebook colspan="4">
                                    <page string="Components" autofocus="autofocus">
                                    </page>
                                </notebook>      
                            </form>
                            <tree string="Pages" >
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="type_id"/>
                                <field name="visits"/>
                                <field name="last_date"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='funnel_view_kanban' model='ir.ui.view'>
        <field name="name">funnel.kanban</field>
        <field name="model">funnel.funnel</field>
        <field name="arch" type="xml">
            <kanban default_group_by="buyer_journey_stage" class="o_kanban_small_column">
                <field name="buyer_journey_stage"/>
                <field name="name"/>
                <field name="type_id"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">
                        	<div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                                    <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <h4 class="oe_partner_heading">
                                    <a type="open" class="o_kanban_record_title">
                                        <field name="name"/>
                                    </a>
                                </h4> 
                                <ul>
                                    <li>Type: <field name="type_id"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id='funnel_action' model='ir.actions.act_window'>
        <field name="name">Funnels</field>
        <field name="res_model">funnel.funnel</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new funnel
          </p>
        </field>
    </record>
    
        <menuitem id="menu_funnel" name="Funnels"
            parent="marketing_funnels.marketing_funnels_menu_root"
            action="funnel_action" sequence="1"/>


    <!-- Funnel Pages -->


    <record id='funnel_page_view_tree' model='ir.ui.view'>
        <field name="name">funnel.page.tree</field>
        <field name="model">funnel.page</field>
        <field name="arch" type="xml">
            <tree string="Funnel Pages">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="type_id"/>
                 <field name="funnel_id"/>
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="funnel_page_view_form">
        <field name="name">funnel.page.form</field>
        <field name="model">funnel.page</field>
        <field name="arch" type="xml">
            <form string="Activity">                
            	<sheet>
                        <div class="oe_button_box" name="button_box">
                            <field name="is_published" widget="website_redirect_button"/>
                        </div>   
                    <div class="oe_title">
                    	<h1><field name="name" placeholder="Name" nolabel="1"/></h1>                    	
                    </div> 
                        <group>
                            <group>
                                <field name="funnel_id"/>   
                                <field name="type_id"/>  
                                <field name="resource"/>                             
                            </group>
                            <group>
                                <field name="website_id"/>   
                                <field name="visits"/>   
                            </group>
                        </group>  
                    <notebook colspan="4">
                        <page string="Components" autofocus="autofocus">
                            <group>
                                <group>
                                    <field name="social_proof_notification" />
                                </group>
                                <group>
                                    <field name="style_id" />
                                    <field name="catalogue_mode" attrs="{'invisible':[('resource','!=','catalog'),('resource','!=','random')]}"/>
                                </group>
                                <group  attrs="{'invisible':[('resource','!=','product')]}" string="Product or Service">
                                    <field name="product_id" domain="[('is_published','=',True)]"/>
                                     <field name="has_zoom" />
                                     <field name="has_buy_now" />
                                </group>
                                <group attrs="{'invisible':[('resource','!=','catalog'),('resource','!=','random')]}" string="Catalogue">
                                    
                                    <field name="products_ids"  domain="[('is_published','=',True)]"  nolabel="1">                                        <tree>
                                            <field name="name" />
                                            <field name="price" />
                                            <field name="public_categ_ids" widget="many2many_tags"/>
                                        </tree>
                                    </field>                                    
                                </group>
                                <group  attrs="{'invisible':[('resource','!=','event')]}" string="Event">
                                    <field name="event_id" />
                                </group>
                                <group  attrs="{'invisible':[('resource','!=','lead')]}" string="Lead">
                                    <field name="lead_phone" />
                                    <field name="lead_company" />
                                    <field name="lead_subject" />
                                    <field name="lead_name" attrs="{'invisible':[('lead_subject','==','required')]}"/>
                                    <field name="lead_question" />
                                    <field name="salesteam_id" />
                                    <field name="salesperson_id" />
                                    <field name="call_to_action" />
                                    <field name="button_position" />
                                    <field name="success_page" context="{'funnel_id':funnel_id}"/>
                                </group>
                                <group  attrs="{'invisible':[('resource','!=','badge')]}" string="Gamification">
                                    <field name="badge_id" />
                                </group>
                                <group attrs="{'invisible':['|',('resource','!=','coupon_program'),('resource','!=','promotion')]}">
                                    <field name="coupon_program_id" />
                                </group>
                                <group attrs="{'invisible':[('resource','!=','newsletter')]}" string="Newsletter">
                                    <field name="mailing_list_id" />
                                </group>
                            </group>    
                        </page>
                    </notebook>                	
                </sheet>
            </form>
        </field>
    </record>


    <record id='funnel_page_action' model='ir.actions.act_window'>
        <field name="name">Funnels Pages</field>
        <field name="res_model">funnel.page</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new funnel page
          </p>
        </field>
    </record>


    <menuitem id="menu_marketing_strategy_touchpoint" name="Funnel Pages"
            parent="marketing_funnels.marketing_funnels_menu_root"
            action="funnel_page_action" sequence="2"/>	

   
    
  </data>
</odoo>