    <!-- Mail Template -->

        <record id="funnel_email_template_opportunity_mail" model="mail.template">
            <field name="name">Lead/Opportunity: New Lead</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="is_for_funnel">True</field>
            <field name="partner_to">${object.partner_id != False and object.partner_id.id}</field>
            <field name="email_to">${(not object.partner_id and object.email_from)|safe}</field>
            <field name="body_html"><![CDATA[
<p>Hello,</p>
<p>We have very good offer that might suit you. We suggest you subscribe to the
Odoo Discovery Day on May 2015.</p>
<p>${object.company_id.name}</p>
<p>If any further information is required, do not hesitate to reply to this message.</p>
<p>Regards,</p>]]>
            </field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>

