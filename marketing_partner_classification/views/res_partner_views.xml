<odoo>
    <data>

      <record id="res_partner_clasification_form" model="ir.ui.view">
        <field name="name">res.partner.marketing_classification.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
          <page name="sales_purchases" position="after">
            <page string="Classification" name="Classification" attrs="{'invisible': [('is_company','=',False),('parent_id','!=',False)]}" groups="marketing_strategy.group_strategy_user">
              <group string="Marketing">
                <group>
                  <field name="digitization_level"/>
                  <field name="platform_id"/>
                  <field name="stores"/>
                  <field name="sales_floor"/>
                </group>
                <group> 
                  <field name="employees"/>
                  <field name="turnover"/>
                  <field name="assets"/>               
                </group>
              </group>
              <group string="Digitization">
                <group>
                  <field name="crm"/>
                  <field name="sales"/>
                  <field name="online_presence"/>
                  <field name="ecommerce"/>
                  <field name="purchase"/>
                  <field name="inventory"/>
                </group>
                <group>
                  <field name="mrp"/>
                  <field name="hr"/>
                  <field name="fleet"/>
                  <field name="marketing"/>
                  <field name="finances"/>
                  <field name="war_room"/>
                </group>
              </group>
              <group string="Consulting">
                <group>     
                  <field name="business_model"/>
                  <field name="innovation"/>     
                </group>
                <group>   
                  <field name="marketing_campaign"/>
                  <field name="trainning"/>          
                </group>
              </group>
            </page>
          </page>     
        </field>
      </record>

<!--Platform -->
        <record id="view_partner_platform_form" model="ir.ui.view">
            <field name="name">res.partner.platform.form</field>
            <field name="model">res.partner.platform</field>
            <field name="arch" type="xml">
                <form string="Digital Platfom">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_partner_platform_list" model="ir.ui.view">
            <field name="name">res.partner.platform.list</field>
            <field name="model">res.partner.platform</field>
            <field eval="6" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Platform">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_partner_platform" model="ir.actions.act_window">
            <field name="name">Digital Platfoms</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner.platform</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new Digital Platfom
              </p>
            </field>
        </record>    
        
        <menuitem id="menu_partner_platform"
          action="action_partner_platform"
          name="Digital Platfoms"
          sequence="4" parent="contacts.res_partner_menu_config"
          groups="marketing_strategy.group_strategy_user"/>


    </data>
</odoo>